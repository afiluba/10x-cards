---
import Layout from "../../layouts/Layout.astro";
import { LoginForm } from "../../components/auth/LoginForm";
import { isFeatureEnabled, FeatureFlag } from "../../features";

export const prerender = false;

// Sprawdź czy funkcjonalność autoryzacji jest włączona
if (!isFeatureEnabled(FeatureFlag.AUTH)) {
  return Astro.redirect("/");
}
---

<Layout title="Logowanie - 10x Cards">
  <div class="container mx-auto px-4 py-8 max-w-md" data-test-id="login-page">
    <LoginForm client:load />
  </div>
</Layout>
