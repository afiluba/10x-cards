---
import Layout from "../../layouts/Layout.astro";
import { RegisterForm } from "../../components/auth/RegisterForm";
import { isFeatureEnabled, FeatureFlag } from "../../features";

export const prerender = false;

// Sprawdź czy funkcjonalność autoryzacji jest włączona
if (!isFeatureEnabled(FeatureFlag.AUTH)) {
  return Astro.redirect("/");
}
---

<Layout title="Rejestracja - 10x Cards">
  <div class="container mx-auto px-4 py-8 max-w-md" data-test-id="register-page">
    <RegisterForm client:load />
  </div>
</Layout>
